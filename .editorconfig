# http://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[**.scss]
indent_size = 4

[**.js]
indent_size = 2

[*.html]
indent_size = 4

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
